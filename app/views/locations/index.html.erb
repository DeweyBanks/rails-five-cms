<% title 'Locations' %>
<% description 'For over 100 years, EHE has been the leader in healthcare and wellbeing. We are pioneers in employee health and lifestyle management and are devoted to emp' %>
<% keywords 'EHE, Locations' %>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBGn9IPPtryywXYa5j_owNGbgWkTokVQyw"></script>
<%= javascript_include_tag "gmaps.js" %>

<!-- heading -->
<div class="page-header">
  <div class='row'>
    <div class='small-12 column'>
      <h1 class='title-heading'>Locations</h1>
    </div>
  </div>
  <div class='row'>
   <div class='small-12 column'>
    <p>We have seven clinics around the country, as well as hundreds of affiliated doctors and locations in our expanded physicians network.</p>
    <p>See everywhere you can find us.</p>
  </div>
<!--        <div class='small-12 large-6 column'>

</div>-->
</div>
</div>


<div class='row bot-space-75'>
  <div class='small-12 medium-9 medium-push-3 large-9 large-push-3 column address-form-container'>
    <div class="row medium-collapse">
     <!-- <div class="address-form-container ">=-->
      <div class='small-8 columns'>
        <div class="mapouter">

          <% if @locations.size <= 0 %>
            <h5>No locations found this area</h5>
          <% end %>
          <% if @default %>
            <%= tag.div nil, id: 'map', :class => 'gmap_canvas', data: { locations: @locations.to_json(methods: [:address]),l: params[:l], d: @default} %>
          <% else %>
            <%= tag.div nil, id: 'map', :class => 'gmap_canvas', data: { locations: @locations.to_json(methods: [:address]),l: params[:l]} %>
          <% end %>
          <style>
            .mapouter{overflow:hidden;height:750px;width:600px;}
            .gmap_canvas {background:none!important;height:750px;width:600px;}
          </style>
        </div>
      </div>
      <div class='small-4 columns'>
       <div class="row">
         <div class='small-12 column'>

          <%= form_with(url: locations_path, id: "address-form", local: true, method: :get) do |f| %>
           <div class="input-group">
            <%= f.text_field :near, id: "address-input", :class => "input-group-field address-form-field", placeholder: "city, state, or zip code" %>
            <div class="input-group-button">
            <button class="button-search" type="submit" value="Submit">
              <svg class="icon"><use xlink:href="#magnify-glass" /></svg>
            </button>
           </div>
           </div>
          <% end %>
        </div>
      </div>
      <div class="row search-response">
       <div class='small-12 column'>
        <!-- start adress response area -->
        <ul>
          <% @locations.each do |location| %>
            <% cache location do %>
              <%= render location %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- </div> -->
</div>

<!-- locations column -->
