      </div>
    </div>

    <div class="tabs-content" data-tabs-content="article-tabs">
      <div class="tabs-panel" id="wellness-coach-articles">
        <div class="row small-up-1 medium-up-2 large-up-3">
          <ul class="gridder clearfix">
            <%= render :partial => 'commanders/commander', :collection => @coaches, :as => :commander %>
          </ul>
        </div>
        <%= render :partial => 'commanders/about', :collection => @coaches, :as => :commander %>
      </div>
    </div>

<% content_for :js do %>
  <script>
    // Call Gridder
        $('.gridder').gridderExpander({
            scroll: true,
            scrollOffset: 200,
            scrollTo: "panel", // panel or listitem
            animationSpeed: 150,
            animationEasing: "easeInOutExpo",
            showNav: true, // Show Navigation
            nextText: "", // Next button text
            prevText: "", // Previous button text
            closeText: "", // Close button text
            onStart: function () {
                //Gridder Inititialized
                console.log('On Gridder Initialized...');
            },
            onContent: function () {
                //Gridder Content Loaded
                console.log('On Gridder Expand...', this);
            },
            onClosed: function () {
                //Gridder Closed
                console.log('On Gridder Closed...');
            }
        });



    document.addEventListener("DOMContentLoaded", function(event) {
      $('a.load-more').click(function (e) {
        e.preventDefault();
        $('.load-more').hide();
        $('.loading-gif').show();
        var last_id = $('.record').last().attr('data-id');

        $.ajax({
            type: "GET",
            url: $(this).attr('href'),
            data: {
                id: last_id
            },
            dataType: "script",
            success: function () {
                $('.loading-gif').hide();
                $('.load-more').show();
            }
        });
      });
    });
  </script>
<% end %>
