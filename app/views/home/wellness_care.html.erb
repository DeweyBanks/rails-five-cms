        });

        function setTabsMediaQuery(event, newSize, oldSize){
            console.log('setTabsMediaQuery event:'+event);
            console.log('setTabsMediaQuery newSize:'+newSize);
            console.log('setTabsMediaQuery oldSize:'+oldSize);
