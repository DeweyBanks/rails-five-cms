                    $("html, body").animate({ scrollTop: $('#coaching-article').offset().top - (window.innerHeight/2) }, 0);
                }
                if( $("#tab-clinical-coordination-article").hasClass( "is-active" ) ){
                    $("html, body").animate({ scrollTop: $('#clinical-coordination-article').offset().top - (window.innerHeight/2) }, 0);
                }
                if( $("#tab-eheme-article").hasClass( "is-active" ) ){
                    $("html, body").animate({ scrollTop: $('#eheme-article').offset().top - (window.innerHeight/2) }, 0);
                }
                
            }else{
                if(oldSize=="small"){
