            //if (isBreakPoint(685)) { 
            /*
            if(Foundation.MediaQuery.current == "small"){
                newSize = "small";
            }
            */
            
            setTabsMediaQuery(event, Foundation.MediaQuery.current, oldSize);
        });

        function setTabsMediaQuery(event, newSize, oldSize){
            console.log('setTabsMediaQuery event:'+event);
            console.log('setTabsMediaQuery newSize:'+newSize);
            console.log('setTabsMediaQuery oldSize:'+oldSize);
            if( newSize == "small"){
                $( "#coaching-article" ).addClass( "is-active" );//add
                $( "#clinical-coordination-article" ).addClass( "is-active" );//add
                $( "#eheme-article" ).addClass( "is-active" );//add
