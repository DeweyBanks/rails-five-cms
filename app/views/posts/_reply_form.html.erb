<div>
  <%= form_for ([@post, @post.comments.build]) do |f| %>

  <div class="form-field">
    <%= f.text_field :first_name, :autofocus => true, :placeholder=>"First Name" %>
  </div>

  <div class="form-field">
    <%= f.text_field :last_name, :autofocus => true, :placeholder=>"Last Name" %>
  </div>

  <div class="form-field">
    <%= f.email_field :email, :autofocus => true, :placeholder=>"Email" %>
  </div>

  <div class="form-field">
    <%= f.text_field :website, :autofocus => true, :placeholder=>"Website" %>
  </div>

  <div class="form-field">
    <%= f.text_area :body, :autofocus => true, :placeholder=>"Comment" %>
  </div>

  <div>
    <%= f.submit 'Post Comment' %>
    <% end %>
  </div>
</div>
