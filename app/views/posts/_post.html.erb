<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Created By: </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.content.html_safe %></td>
        <td><%=  %></td>
        <td><%= link_to 'Read More', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
