 <div class="admin">
 <div class="page-header">
  <div class='row bot-space-25'>
      <div class='small-12 columns'>
        <h1 class='title-heading text-center'>Messages</h1>
      </div>
    </div>
  </div>


    <div class="row">
      <div class="small-12 columns">
        <table>
          <thead>
            <tr>
              <th><%= sortable "first_name" %></th>
              <th><%= sortable "last_name" %></th>
              <th><%= sortable "company_name" %></th>
              <th><%= sortable "email" %></th>
              <th><%= sortable "interest" %></th>
              <th>Comment</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @messages.each do |message| %>
              <tr>
                <td><%= message.first_name %></td>
                <td><%= message.last_name %></td>
                <td><%= message.company_name %></td>
                <td><%= message.email %></td>
                <td><%= message.interest %></td>
                <td><%= message.comment %></td>
                <td><%= link_to 'Show', admin_message_path(message) %></td>
                <td><%= link_to 'Destroy', admin_message_path(message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @messages %>
      </div>
    </div>
</div>


