<div class="page-header">
  <div class='row'>
    <div class='small-12'>
      <h1 class='title-heading text-center'>Campaigns</h1>
      <%= link_to 'Add Campaign', new_admin_campaign_path, :class => 'large-offset-5 text-center' %>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <table>
          <thead>
            <tr>
              <th><%= sortable "name" %></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @campaigns.each do |campaign| %>
              <tr>
                <td><%= campaign.name %></td>
                <td><%= link_to 'Edit', edit_admin_campaign_path(campaign) %></td>
                <td><%= link_to 'Destroy', admin_campaign_path(campaign), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


