<div class="page-header">
  <div class='row'>
    <div class='small-12'>
      <h1 class='title-heading text-center'>Categories</h1>
      <%= link_to 'Add Category', new_admin_category_path, :class => 'large-offset-5 text-center' %>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Featured Post</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <% if category.featured_post %>
                  <td><%= image_tag category.featured_post.main_image.url(:medium) %></td>
                <% else %>
                  <td>Please Set Featured Post</td>
                <% end %>
                <td>
                  <%= link_to 'Show', admin_category_path(category) %> |
                  <%= link_to 'Edit', edit_admin_category_path(category) %> |
                  <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


