<div class="page-header">
  <div class='row'>
    <div class='small-12'>
      <h1 class='title-heading text-center'>Admins</h1>
      <%= button_to 'Add Admin', new_admin_user_path, :class => 'large-offset-5 text-center' %>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <table>
          <thead>
            <tr>
              <th><%= sortable "name" %></th>
              <th><%= sortable "email" %></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.full_name %></td>
                <td><%= user.email %></td>
                <td><%= link_to 'Show', admin_user_path(user) %></td>
                <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
                <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


