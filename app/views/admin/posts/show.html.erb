<!-- Blog hero image -->
<div class="expanded row bot-space-75">
  <div class='small-12'>
    <div id="blog-hero-container">
      <div class="grad-bg"></div>
      <div class="row no-bottom-margin" >
        <div class="small-12 column">
          <div class="content-contain hero">
            <h1 class="title-heading white-text"><%= @post.title %></h1>
          </div>
        </div>
      </div>
      <%= image_tag @post.main_image.url  %>
    </div>
  </div>
</div>

<div class='row bot-space-75'>
  <div class='small-12 medium-8 medium-offset-1 column medium-push-3'>
    <!-- Blog Date -->
    <div class="row">
      <div class="small-12 column">
        <p class="gray-text font-bold"><%= @post.created_at.to_time.strftime('%B %e %Y') %></p>
      </div>
    </div>
      <!-- End Blog Date -->
        <%=raw @post.body %>
      <!-- end Blog Story -->
  </div>
    <!-- left column -->
  <div class='small-12 medium-3 column medium-pull-9'>
    <div class="row bot-space-75">
      <div class="small-12 column blog-categories">
        <% if @post.published? %>
          <% if @post.main_featured %>
            <h4>Main Featured Article</h4>
          <% else %>
            <h4>Set As Main Featured Article:</h4>
            <%= link_to "Featured", set_main_feature_admin_post_path(@post.id), method: :post, :class => 'round-button ProximaNova-Medium cta button-gray' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row bot-space-75">
      <div class="small-12 column blog-categories">
        <h4>Url:</h4>
        <%=raw "https://138.91.124.63" + post_path(@post) %>
      </div>
    </div>
      <!-- SHARE Social Media -->
    <div class="row ">
      <div class="small-12 column">
        <h4 class="font-bold">Post Status:</h4>
      </div>
    </div>
    <div class="row bot-space-75">
      <!--  social container -->
      <div class="small-3 medium-3 column">
        <% if @post.locked %>
          <p>Locked</p>
        <% else %>
          <p><%= @post.status %></p><br>
          <% unless @post.published? %>
            <%= button_to "Publish Now", admin_publish_post_path(@post) %>
          <% end %>
        <% end %>
      </div>

      <!-- end social container -->
    </div>

      <!-- Additional Blog posts -->
        <div class="row bot-space-75">
           <div class="small-12 column">
            <h4> Publish Date </h4>
              <% if @post.published_at.nil? %>
                <p>Publish date not set</p>
              <% else %>
                <p>published date: <br>
                  <%= @post.published_at.strftime('%-m/%d/%Y  %-I:%M%p') %>
                </p>
              <% end %>
              <p>
                <%= link_to 'Edit', edit_admin_post_path(@post) %> |
                <%= link_to 'Back', admin_posts_path %>
              </p>
            </div>
        </div>
      <!-- End Additional Blog posts -->
    </div>
    <!-- end left column -->
  </div>
<!--</div>-->




