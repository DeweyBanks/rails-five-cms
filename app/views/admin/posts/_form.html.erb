<%= form_with(model: [ 'admin', post], local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= form.label :tags %>
    <%= form.text_field :all_tags, placeholder: "Tags separated with comma" %>
  </div>

   <div class="field">
    <%= form.label :meta_description %>
    <%= form.text_field :meta_description, placeholder: "Meta Description" %>
  </div>

  <div class="field">
    <%= form.label :campaign %>
    <%= form.collection_select "campaign_id", @campaigns, "id", "name", {include_blank: true} %>
  </div>

   <div class="field">
    <%= form.label :category %>
    <%= form.collection_select "category_id", Category.all, "id", "name" %>
  </div>

  <div class="field">
    <%= form.label :slug %>
    <%= form.text_field :slug, id: :post_slug %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title %>
  </div>

  <div class="field">
    <%= form.label :main_image %>
    <%= form.file_field :main_image, id: :post_main_image %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.cktext_area :body, id: :post_body %>
  </div>

  <div class="field">
    <%= form.fields_for :pictures, @post.pictures.build do |picture_form| %>
      <p>
        Picture:
        <%= picture_form.text_field :caption, placeholder: "Caption" %>
        <%= picture_form.text_field :alt, placeholder: "alt"  %>
        <%= picture_form.file_field :image %>
        <%= picture_form.check_box :_destroy %>
        <%= picture_form.label :_destroy, "Remove Image" %>
      </p>
    <% end %>

    <%= link_to_add_fields 'Add new image', form, :pictures %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<script type="text/javascript">
  $('[data-form-prepend]').click( function(e) {
    var obj = $( $(this).attr('data-form-prepend') );
    obj.find('input, select, textarea').each( function() {
      $(this).attr( 'name', function() {
        return $(this).attr('name').replace( 'new_record', (new Date()).getTime() );
      });
    });
    obj.insertBefore( this );
    return false;
  });
</script>


