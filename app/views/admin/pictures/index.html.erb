<div class="page-header">
  <div class='row'>
    <div class='small-12'>
      <h1 class='title-heading text-center'>Pictures</h1>
      <%= link_to 'Add picture', new_admin_picture_path, :class => 'large-offset-5 text-center' %>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <table>
          <thead>
            <tr>
              <th>Image</th>
              <th>Caption</th>
              <th>Alt</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @pictures.each do |picture| %>
              <tr>
                <td><%= image_tag picture.image.url %></td>
                <td><%= picture.caption %></td>
                <td><%= picture.alt %></td>
                <td><%= link_to 'Edit', edit_admin_picture_path(picture) %></td>
                <td><%= link_to 'Destroy', admin_picture_path(picture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


