<div class="page-header">
  <div class='row'>
    <div class='small-12'>
      <h1 class='title-heading text-center'>Commanders in Wellness</h1>
      <%= button_to 'Update Commanders', admin_update_commanders_path, :class => 'large-offset-5 text-center' %>
      <%= button_to 'Add Commander', new_admin_commander_path, :class => 'large-offset-5 text-center' %>
    </div>
    <div class="row">
      <div class="small-12 columns">

        <table>
          <thead>
            <tr>
              <th>Avatar</th>
              <th><%= sortable "commander_type_id", "type" %></th>
              <th><%= sortable "title" %></th>
              <th><%= sortable "first_name" %></th>
              <th><%= sortable "last_name" %></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @commanders.each do |cm| %>
              <tr>
                <td><%= image_tag cm.avatar.url(:thumb) %></td>
                <td><%= cm.commander_type.name if cm.commander_type.present? %></td>
                <td><%= cm.title %></td>
                <td><%= cm.first_name %></td>
                <td><%= cm.last_name %></td>
                <td><%= link_to 'Show', admin_commander_path(cm) %></td>
                <td><%= link_to 'Edit', edit_admin_commander_path(cm) %></td>
                <td><%= link_to 'Destroy', admin_commander_path(cm), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @commanders %>
      </div>
    </div>
  </div>
</div>

